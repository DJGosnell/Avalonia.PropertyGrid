<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Avalonia.PropertyGrid.Controls">
  <Design.PreviewWith>
    <controls:CheckedListEdit />
  </Design.PreviewWith>

  <Style Selector="controls|CheckedListEdit">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <DataValidationErrors>
			  <Border BorderBrush="Gray" BorderThickness="0.5" CornerRadius="0,0,5,5" Margin="0">
				  <ItemsControl x:Name="PART_ItemsPresenter"
								  Items="{Binding Model.Items, RelativeSource={RelativeSource TemplatedParent}}">
					  <ItemsControl.ItemsPanel>
						  <ItemsPanelTemplate>
							  <StackPanel Orientation="Vertical" Spacing="4">
							  </StackPanel>
						  </ItemsPanelTemplate>
					  </ItemsControl.ItemsPanel>
					  <ItemsControl.ItemTemplate>
						  <DataTemplate>
							  <StackPanel Orientation="Horizontal">
								  <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"></CheckBox>
								  <TextBlock Text="{Binding Name}" VerticalAlignment="Center"></TextBlock>
							  </StackPanel>
						  </DataTemplate>
					  </ItemsControl.ItemTemplate>
				  </ItemsControl>
			  </Border>
		  </DataValidationErrors>
	  </ControlTemplate>
    </Setter>
  </Style>
</Styles>
