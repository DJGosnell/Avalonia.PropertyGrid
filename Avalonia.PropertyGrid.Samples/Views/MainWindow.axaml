<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalonia.PropertyGrid.Samples.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:pgc="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
		Width="1400"
		Height="900"
        x:Class="Avalonia.PropertyGrid.Samples.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia.PropertyGrid.Samples">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<TabControl TabStripPlacement="Left">
		<TabItem Header="Simple">
			<ScrollViewer>
				<pgc:PropertyGrid Margin="4" SelectedObject="{Binding $parent[Window].DataContext.simpleObject}"></pgc:PropertyGrid>	
			</ScrollViewer>			
		</TabItem>

		<TabItem Header="DataSync">
			<ScrollViewer>
				<Grid ColumnDefinitions="Auto,2,Auto">
					<GridSplitter Grid.Column="1"></GridSplitter>
					<pgc:PropertyGrid Margin="2" SelectedObject="{Binding $parent[Window].DataContext.syncObject}"></pgc:PropertyGrid>
					<pgc:PropertyGrid Margin="2" Grid.Column="2" SelectedObject="{Binding $parent[Window].DataContext.syncObject}"></pgc:PropertyGrid>
				</Grid>
			</ScrollViewer>
		</TabItem>
		
		<TabItem Header="MultiObjects"></TabItem>
	</TabControl>
</Window>
